<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--style book title-->
    <style name="BookTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/BookTitleColor</item>
    </style>

    <!--style book authors-->
    <style name="BookAuthors">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/BookAuthorsColor</item>
    </style>

    <!--style the search edit text-->
    <style name="SearchText">
        <item name="android:layout_margin">@dimen/list_item_bookTitle_padding</item>
        <item name="android:padding">@dimen/list_item_bookTitle_padding</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/search_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

</resources>
